generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model LostFound {
  id             Int      @id @default(autoincrement())
  item           String
  characteristic String
  status         Status
  location       String
  dateFound      DateTime
  dateRetrieved  DateTime
  User           User?    @relation(fields: [userId], references: [id])
  userId         Int?
}

enum Status {
  found
  lost
  retrieved
}

model User {
  id        Int         @id @default(autoincrement())
  email     String      @unique
  lostFound LostFound[]
}
